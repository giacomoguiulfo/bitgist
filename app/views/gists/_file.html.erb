<%= content_tag :div, class: "nested-fields", data: { "list-target"=> "item", new_record: form.object.new_record? } do %>
<div class="relative mt-2 border border-gray-200 rounded-lg" data-controller="codemirror">
  <div class="flex flex-wrap items-center justify-between py-2 mb-2 border-b border-gray-200 sm:flex-nowrap bg-gray-50">
    <div class="w-1/3 ml-3">
    <%= form.text_field :filename,
      data: {action: "codemirror#setLanguage", "codemirror-target" => "filename"},
      placeholder: 'Filename including extension...',
      class: "flex-1 w-full block focus:ring-blue-300 focus:border-blue-500 min-w-0 rounded-md sm:text-sm border-gray-300"
    %>
    </div>
    <div class="flex-shrink-0 mr-4">
      <button type="button" data-action="nested-form#remove_association"
        class="flex items-center p-2 -m-2 text-gray-400 rounded-full nested-field-trash hover:text-gray-600">
        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      </button>
    </div>
  </div>
  <%= form.text_area :content, data: {"codemirror-target" => "editor"} %>
  <%= form.hidden_field :language, data: {"codemirror-target" => "language"} %>
</div>

<%= form.hidden_field :_destroy %>
<% end %>
